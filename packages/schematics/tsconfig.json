{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/src",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "src/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es6",
    "types": ["jest", "node"],
    "paths": {
      "@core/*": ["../core/src/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/*/templates/**/*", "build/*/**"]
}
