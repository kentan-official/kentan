{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "ng-add": {
      "aliases": ["install-kentan"],
      "factory": "./install/index#ngAdd",
      "schema": "./install/schema.json",
      "description": "Installs @kentan-official/core & @kentan-official/schematics"
    },
    "sketch": {
      "aliases": ["ks"],
      "factory": "./sketch/index#create",
      "schema": "./sketch/schema.json",
      "description": "Creates a Sketch for kentan"
    },
    "sketch-barrel": {
      "aliases": ["ksb"],
      "factory": "./sketch-barrel/index#create",
      "schema": "./sketch-barrel/schema.json",
      "description": "Creates a Barrel exporting all sketches"
    }
  }
}
